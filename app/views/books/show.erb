<h1>"<%= @book.title %>"</h1>
<ul>
	<li>
		<label>Author:</label>
		<%= @book.author.name %>
	</li>
	<li>
		<label>Genre(s):</label>
		<% @book.genres.each do |genre| %>
			<%= genre.name %>
		<% end %>
	</li>
</ul>
<br>
<form method="POST" action="/books/<%= @book.slug %>">
	<input id="hidden" type="hidden" name="_method" value="delete">
	<input type="submit" value="Delete Book">
</form>