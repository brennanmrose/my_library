<h1><%= @author.name %></h1>
<br>
<label>Books:</label>
<ol>
  <% @author.books.each do |book| %>
    <li><a href="/books/<%= book.slug %>"><%= book.title %> </a></li>
  <% end %>
</ol>
<br>
<label>Genre(s):</label>
<ol>
  <% @author.genres.uniq.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ol>